# OPTIMIZED CONFIGURATION BASED ON COMPREHENSIVE BACKTESTING RESULTS
# Generated from 1-day, 90-day, and 180-day backtesting analysis
# Market conditions: Bear market (-16.88% BTC return, 34.89% max drawdown)

# =============================================================================
# CORE TRADING SETTINGS (Optimized for Bear Market)
# =============================================================================

# Trading pairs and base currency
BASE_CURRENCY=EUR
TRADING_PAIRS=BTC-EUR,ETH-EUR

# OPTIMIZED: 120-minute intervals showed best Sharpe ratio and fewer trades
DECISION_INTERVAL_MINUTES=120

# Risk level - conservative for volatile conditions
RISK_LEVEL=MEDIUM

# Trading mode
SIMULATION_MODE=false

# =============================================================================
# STRATEGY CONFIGURATION (Enhanced Performance)
# =============================================================================

# OPTIMIZED: Momentum and mean reversion performed best in bear market
# Enhanced strategies showed consistent 3-10% improvements
USE_ENHANCED_STRATEGIES=true
ENABLE_ADAPTIVE_THRESHOLDS=true

# Strategy weights based on backtesting performance
MOMENTUM_WEIGHT=0.3
MEAN_REVERSION_WEIGHT=0.3
TREND_FOLLOWING_WEIGHT=0.2
LLM_STRATEGY_WEIGHT=0.2

# =============================================================================
# CONFIDENCE THRESHOLDS (Bear Market Optimized)
# =============================================================================

# OPTIMIZED: Higher thresholds reduce false signals in volatile conditions
CONFIDENCE_THRESHOLD_BUY=65
CONFIDENCE_THRESHOLD_SELL=60

# LLM strategy thresholds
LLM_CONFIDENCE_THRESHOLD_BUY=70
LLM_CONFIDENCE_THRESHOLD_SELL=65

# =============================================================================
# RISK MANAGEMENT (Conservative for Volatility)
# =============================================================================

# Position sizing - conservative for bear market
MIN_TRADE_AMOUNT=5.0
MAX_POSITION_SIZE_PERCENT=40
TARGET_EUR_ALLOCATION=20
MIN_EUR_RESERVE=15.0

# Risk multipliers for different risk levels
RISK_HIGH_POSITION_MULTIPLIER=0.4
RISK_MEDIUM_POSITION_MULTIPLIER=0.7
RISK_LOW_POSITION_MULTIPLIER=1.0

# Daily trading limits
MAX_DAILY_TRADES=8
MAX_DAILY_VOLUME_PERCENT=25.0

# =============================================================================
# MARKET REGIME DETECTION (Optimized Thresholds)
# =============================================================================

# OPTIMIZED: Adjusted for current market volatility patterns
TRENDING_THRESHOLD=3.0
VOLATILE_THRESHOLD=8.0
REGIME_LOOKBACK_HOURS=24

# Market regime strategy priorities (adaptive)
TRENDING_STRATEGY_ORDER=trend_following,momentum,llm_strategy,mean_reversion
RANGING_STRATEGY_ORDER=mean_reversion,llm_strategy,momentum,trend_following
VOLATILE_STRATEGY_ORDER=llm_strategy,mean_reversion,trend_following,momentum

# =============================================================================
# TECHNICAL INDICATORS (Optimized Parameters)
# =============================================================================

# Bollinger Bands - shorter period for day trading
BB_PERIOD=4
BB_STD_DEV=2.0

# RSI settings
RSI_PERIOD=14
RSI_OVERBOUGHT=70
RSI_OVERSOLD=30

# MACD settings
MACD_FAST=12
MACD_SLOW=26
MACD_SIGNAL=9

# Moving averages
SMA_SHORT=10
SMA_LONG=20
EMA_PERIOD=12

# =============================================================================
# AI/LLM CONFIGURATION
# =============================================================================

# Google AI settings
LLM_MODEL=gemini-3-flash-preview
LLM_FALLBACK_MODEL=gemini-3-pro-preview
LLM_LOCATION=global

# News sentiment integration
NEWS_SENTIMENT_WEIGHT=0.2
NEWS_SENTIMENT_ENABLED=true

# Volatility analysis
VOLATILITY_ANALYSIS_ENABLED=true
VOLATILITY_LOOKBACK_PERIODS=24

# =============================================================================
# PERFORMANCE MONITORING
# =============================================================================

# Performance tracking
PERFORMANCE_TRACKING_ENABLED=true
SNAPSHOT_FREQUENCY=daily
PERFORMANCE_RESET_ENABLED=false

# Health checks
HEALTH_CHECK_INTERVAL_MINUTES=60
ALERT_ON_CONSECUTIVE_LOSSES=5
ALERT_ON_DRAWDOWN_PERCENT=15.0

# =============================================================================
# LOGGING AND NOTIFICATIONS
# =============================================================================

# Logging level
LOG_LEVEL=INFO

# Notifications
NOTIFICATIONS_ENABLED=true
NOTIFICATION_CHANNELS=email

# Dashboard and reporting
WEBSERVER_SYNC_ENABLED=true
DAILY_REPORT_ENABLED=true
WEEKLY_VALIDATION_ENABLED=true

# =============================================================================
# CLOUD INTEGRATION
# =============================================================================

# Google Cloud Storage
GCS_SYNC_ENABLED=true
GCS_SYNC_INTERVAL_HOURS=6

# Backup settings
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Coinbase Advanced Trade API (REQUIRED - Set your values)
COINBASE_API_KEY=your_api_key_here
COINBASE_API_SECRET=your_private_key_here

# Google Cloud Project (REQUIRED - Set your values)
GOOGLE_CLOUD_PROJECT=your_project_id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json


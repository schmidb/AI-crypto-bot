# TRADING CAPITAL MANAGEMENT - Prevents "All Money in One Coin" Problem

# ============================================================================
# RESERVE MANAGEMENT (Prevents spending all EUR)
# ============================================================================

# Minimum EUR balance to always maintain (never trade below this)
MIN_EUR_RESERVE=100.0              # Always keep €100 for trading

# Maximum percentage of available EUR to use per trade
MAX_EUR_USAGE_PER_TRADE=25         # Only use 25% of available EUR per BUY

# Target EUR allocation (bot will try to maintain this %)
TARGET_EUR_ALLOCATION=30           # Keep 30% in EUR for trading

# ============================================================================
# POSITION SIZING LIMITS (Prevents oversized positions)
# ============================================================================

# Maximum position size per asset (% of total portfolio)
MAX_POSITION_SIZE_PERCENT=40       # No single crypto >40% of portfolio

# Minimum position size to maintain (prevents selling everything)
MIN_POSITION_SIZE_EUR=50           # Keep at least €50 in each crypto

# ============================================================================
# REBALANCING RULES (Maintains trading ability)
# ============================================================================

# Trigger rebalancing when EUR drops below this %
REBALANCE_TRIGGER_EUR_PERCENT=15   # Rebalance if EUR <15% of portfolio

# Target allocation after rebalancing
REBALANCE_TARGET_EUR_PERCENT=25    # Rebalance to 25% EUR

# Force SELL if crypto allocation gets too high
MAX_CRYPTO_ALLOCATION=85           # Force SELL if crypto >85%

# ============================================================================
# TRADING LIMITS (Prevents overtrading)
# ============================================================================

# Maximum trades per day
MAX_TRADES_PER_DAY=10              # Limit to 10 trades/day

# Minimum time between trades (minutes)
MIN_TIME_BETWEEN_TRADES=30         # Wait 30min between trades

# Daily trading limit (% of portfolio)
MAX_DAILY_TRADING_VOLUME=20        # Max 20% portfolio turnover/day

# ============================================================================
# EXAMPLE SCENARIOS
# ============================================================================

# Scenario 1: €300 total portfolio
# - EUR reserve: €100 (33%)
# - Available for crypto: €200 (67%)
# - Per trade limit: €50 (25% of €200 available)
# - Result: Can make 4 trades before hitting limits

# Scenario 2: Rebalancing trigger
# - Portfolio: €50 EUR + €250 crypto = €300 total
# - EUR %: 16.7% (below 15% trigger)
# - Action: SELL €25 crypto → €75 EUR (25% target)
# - Result: Restored trading ability

# ============================================================================
# IMPLEMENTATION NOTES
# ============================================================================

# This prevents the "all money in one coin" problem by:
# 1. Always keeping minimum EUR for trading
# 2. Limiting trade sizes to preserve capital
# 3. Automatic rebalancing when EUR gets too low
# 4. Position size limits prevent concentration risk

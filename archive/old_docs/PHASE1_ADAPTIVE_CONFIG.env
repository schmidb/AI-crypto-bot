# PHASE 1: ADAPTIVE STRATEGY CONFIGURATION
# Long-term sustainable fix for trading bot

# ============================================================================
# ADAPTIVE STRATEGY SETTINGS
# ============================================================================

# Enable adaptive strategy manager (requires code changes)
USE_ADAPTIVE_STRATEGY_MANAGER=true

# Market regime detection sensitivity
TRENDING_THRESHOLD_24H=4.0      # % change to consider trending
TRENDING_THRESHOLD_5D=8.0       # % change over 5 days
RANGING_THRESHOLD_24H=1.5       # % change to consider ranging
VOLATILITY_THRESHOLD_BB=4.0     # BB width % for high volatility

# ============================================================================
# ADAPTIVE CONFIDENCE THRESHOLDS
# ============================================================================

# Trending Market Thresholds (lower for trend-following)
TRENDING_TREND_FOLLOWING_BUY=55
TRENDING_TREND_FOLLOWING_SELL=50
TRENDING_MOMENTUM_BUY=60
TRENDING_MOMENTUM_SELL=55
TRENDING_LLM_BUY=65
TRENDING_LLM_SELL=60
TRENDING_MEAN_REVERSION_BUY=75  # Discouraged in trending markets
TRENDING_MEAN_REVERSION_SELL=75

# Ranging Market Thresholds (lower for mean-reversion)
RANGING_MEAN_REVERSION_BUY=60
RANGING_MEAN_REVERSION_SELL=60
RANGING_LLM_BUY=65
RANGING_LLM_SELL=65
RANGING_MOMENTUM_BUY=70
RANGING_MOMENTUM_SELL=70
RANGING_TREND_FOLLOWING_BUY=75  # Discouraged in ranging markets
RANGING_TREND_FOLLOWING_SELL=75

# Volatile Market Thresholds (higher, more conservative)
VOLATILE_LLM_BUY=70
VOLATILE_LLM_SELL=70
VOLATILE_MEAN_REVERSION_BUY=75
VOLATILE_MEAN_REVERSION_SELL=75
VOLATILE_TREND_FOLLOWING_BUY=80
VOLATILE_TREND_FOLLOWING_SELL=80
VOLATILE_MOMENTUM_BUY=80
VOLATILE_MOMENTUM_SELL=80

# ============================================================================
# STRATEGY PRIORITY BY MARKET REGIME
# ============================================================================

# Trending markets: Trend-following gets priority
TRENDING_STRATEGY_PRIORITY=trend_following,momentum,llm_strategy,mean_reversion

# Ranging markets: Mean-reversion gets priority  
RANGING_STRATEGY_PRIORITY=mean_reversion,llm_strategy,momentum,trend_following

# Volatile markets: LLM gets priority (best at handling complexity)
VOLATILE_STRATEGY_PRIORITY=llm_strategy,mean_reversion,trend_following,momentum

# ============================================================================
# CONFIRMATION AND VETO LOGIC
# ============================================================================

# Bonus for strategy agreement
CONFIRMATION_BONUS=5

# Penalty for strong disagreement
VETO_PENALTY=10

# Minimum confidence for veto power
VETO_THRESHOLD=60

# ============================================================================
# ENHANCED TRADING PARAMETERS
# ============================================================================

# Faster decision making for day trading
DECISION_INTERVAL_MINUTES=30

# More aggressive position sizing
MAX_TRADE_PERCENTAGE=20

# Lower minimum trade amounts
MIN_TRADE_AMOUNT=25.0

# ============================================================================
# FALLBACK SETTINGS (if adaptive fails)
# ============================================================================

# Default thresholds if adaptive system fails
DEFAULT_CONFIDENCE_THRESHOLD_BUY=60
DEFAULT_CONFIDENCE_THRESHOLD_SELL=55

# Default strategy weights
DEFAULT_TREND_FOLLOWING_WEIGHT=0.3
DEFAULT_MEAN_REVERSION_WEIGHT=0.25
DEFAULT_MOMENTUM_WEIGHT=0.25
DEFAULT_LLM_WEIGHT=0.2

# ============================================================================
# IMPLEMENTATION NOTES
# ============================================================================

# To enable this configuration:
# 1. Copy these settings to your .env file
# 2. Update main.py to use AdaptiveStrategyManager instead of StrategyManager
# 3. Restart the bot
# 4. Monitor performance improvements

# Expected improvements:
# - More frequent trading (3-5 trades/day instead of <1)
# - Higher confidence scores (60-80% instead of 33-38%)
# - Better market responsiveness
# - Reduced "committee paralysis"

# Safety measures:
# - Gradual rollout with small position sizes
# - Performance monitoring vs old system
# - Rollback capability if needed

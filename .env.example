# Coinbase API credentials
COINBASE_API_KEY=organizations/your-org-id/apiKeys/your-key-id
COINBASE_API_SECRET=-----BEGIN EC PRIVATE KEY-----\nYOUR PRIVATE KEY\n-----END EC PRIVATE KEY-----\n

# Google Cloud settings
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# LLM settings - Following AI_MODEL_STEERING.md
LLM_PROVIDER=vertex_ai
LLM_MODEL=gemini-3-flash-preview
LLM_FALLBACK_MODEL=gemini-3-pro-preview
LLM_LOCATION=global

# Trading settings
TRADING_PAIRS=BTC-USD,ETH-USD
DECISION_INTERVAL_MINUTES=60
RISK_LEVEL=medium
SIMULATION_MODE=true

# IMPORTANT: Confidence thresholds are LEGACY/DISPLAY ONLY
# The adaptive system automatically uses regime-specific thresholds:
# - Ranging markets: 30-35% (low volatility, sideways)
# - Trending markets: 30-35% (growth/decline)
# - Volatile markets: 35-45% (high volatility)
# - Bear markets: 60/40% (declining + low volatility)
# These values are shown in dashboard but NOT used for trading decisions
# CONFIDENCE_THRESHOLD_BUY=60
# CONFIDENCE_THRESHOLD_SELL=50

# Portfolio settings
MAX_TRADE_PERCENTAGE=25
TARGET_CRYPTO_ALLOCATION=80
TARGET_USD_ALLOCATION=20

# Dashboard settings
DASHBOARD_TRADE_HISTORY_LIMIT=10

# Web Server Sync Configuration
WEBSERVER_SYNC_ENABLED=true
WEBSERVER_SYNC_PATH=/var/www/html/crypto-bot

# Logging settings
LOG_LEVEL=INFO
LOG_FILE=logs/crypto_bot.log

# Push Notification settings (Pushover)
NOTIFICATIONS_ENABLED=false
PUSHOVER_TOKEN=your_pushover_app_token
PUSHOVER_USER=your_pushover_user_key
